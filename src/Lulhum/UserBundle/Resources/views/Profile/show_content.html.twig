{% trans_default_domain 'FOSUserBundle' %}

<div class="fos_user_user_show">
	<p>Nom: {{ user.fullname }}</p>
	<p>{{ 'profile.show.email'|trans }}: {{ user.email }}</p>
	<p>Numéro étudiant: {{ user.studentId }}</p>
	<p>Numéro de portable: {{ user.phone }}</p>
	<p>Promotion pour l'année {{ lulhum_toolbox.getCurrentSchoolYear() }}: {{ user.textPromotion }}</p>
	{% if not user.repartitionGroup is null %}
		<p>Groupe de répartition: {{ user.repartitionGroup }}</p>
		<p>Forcer le groupe de répartition: {% if user.repartitionGroupForce %}Oui{% else %}Non{% endif %}</p>
	{% endif %}
	<p>Présence pendant la période de répartition: {{ user.present }}</p>
	<p>Accès internet pendant la période de répartition: {{ user.internetAccess }}</p>
	<p>
		Personne de confiance ayant procuration en cas d'absence:
		{% if user.proxy is null %}
			Non Renseigné
		{% else %}
			{{ user.proxy.fullname }}
		{% endif %}
	</p>
</div>
