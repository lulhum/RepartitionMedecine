{# src/Lulhum/RepartitionMedecineBundle/Resources/views/Admin/editcategory.html.twig #}

{% extends "LulhumRepartitionMedecineBundle::adminlayout.html.twig" %}

{% block title %}
Catégorie - {{ parent() }}
{% endblock %}

{% block bodytitle %}
	<h3>Éditer la catégorie</h3>
{% endblock %}

{% block nobody %}
	{{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
	<div class="panel-body" >
		<div class="form-group" >
			{{ form_label(form.name, null, {'label_attr': {'class': 'control-label col-md-2'}}) }}
			{{ form_errors(form.name) }}
			<div class="col-md-10" >
				{{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
			</div>
		</div>
		<div class="form-group" >
			{{ form_label(form.description, null, {'label_attr': {'class': 'control-label col-md-2'}}) }}
			{{ form_errors(form.description) }}
			<div class="col-md-10" >
				{{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
			</div>
		</div>
	</div>
	<div class="panel-footer" >
		<button class="btn btn-success" type="submit" >Éditer</button>
	</div>		
	{{ form_rest(form) }}
	{{ form_end(form) }}
{% endblock %}
