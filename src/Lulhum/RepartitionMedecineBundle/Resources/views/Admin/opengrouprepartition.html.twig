{# src/Lulhum/RepartitionMedecineBundle/Resources/views/Admin/useradd.html.twig #}

{% extends "LulhumRepartitionMedecineBundle::adminlayout.html.twig" %}

{% block title %}
	Ouvrir la répartition de groupe {{ promotion }} - {{ parent() }}
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datetimepicker/4.15.35/css/bootstrap-datetimepicker.min.css" />
{% endblock %}

{% block bodytitle %}
	<h3 class="panel-title" >Ouvrir la répartition de groupe {{ promotion }}</h3>
{% endblock %}

{% block body %}
	{{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
	<div class="form-group" >
		{{ form_label(form.date, null, {'label_attr': {'class': 'control-label col-md-2'}}) }}
		{{ form_errors(form.date) }}
		<div class="col-md-10" >
			{{ form_widget(form.date, {'attr': {'class': 'form-control'}}) }}
		</div>
	</div>
	<div class="form-group" >
		{{ form_label(form.delay, null, {'label_attr': {'class': 'control-label col-md-2'}}) }}
		{{ form_errors(form.delay) }}
		<div class="col-md-1" >
			{{ form_label(form.delay.hour, 'Heure', {'label_attr': {'class': 'control-label'}}) }}
			{{ form_errors(form.delay.hour) }}
			{{ form_widget(form.delay.hour, {'attr': {'class': 'form-control'}}) }}
		</div>
		<div class="col-md-1" >
			{{ form_label(form.delay.minute, null, {'label_attr': {'class': 'control-label'}}) }}
			{{ form_errors(form.delay.minute) }}
			{{ form_widget(form.delay.minute, {'attr': {'class': 'form-control'}}) }}
		</div>
	</div>
	<div class="form-group" >
			{{ form_label(form.reset, null, {'label_attr': {'class': 'control-label col-md-2'}}) }}
			{{ form_errors(form.reset) }}
			<div class="col-md-1" >
				{{ form_widget(form.reset, {'attr': {'class': 'form-control'}}) }}
			</div>
		</div>
		{{ form_widget(form.ouvrir, {'attr': {'class': 'btn btn-primary'}, 'label': 'Démarrer'}) }}
	{{ form_rest(form) }}
	{{ form_end(form) }}
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	<script type="text/javascript" src="//cdnjs.cloudflare.com/ajax/libs/moment.js/2.9.0/moment-with-locales.js"></script>
	<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datetimepicker/4.15.35/js/bootstrap-datetimepicker.min.js"></script>
	<script type="text/javascript" >
	$(document).ready(function() {
		$('#lulhum_deadline_deadline_date').datetimepicker({
			locale: 'fr',
			minDate: (new Date()).setHours(0, 0, 0, 0)
		});
	});
	</script>		
{% endblock %}
