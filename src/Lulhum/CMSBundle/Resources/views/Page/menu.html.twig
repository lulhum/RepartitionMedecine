{# src/Lulhum/CMSBundle/Resources/views/Page/menu.html.twig #}

{% for key, item in menu %}
	{% if item|length > 1 %}
		<li class="dropdown">
			<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
				{{ key }}
				<span class="caret"></span>
			</a>
			<ul class="dropdown-menu">
				{% for entry in item %}
					<li>
						<a href="{{ path('lulhum_cms_page', {'id': entry.id}) }}" >
							{{ entry.title }}
						</a>
					</li>
				{% endfor %}
			</ul>
		</li>
	{% else %}
		<li>
			<a href="{{ path('lulhum_cms_page', {'id': item[0].id}) }}">
				{{ item[0].menu }}
			</a>
		</li>
	{% endif %}
{% endfor %}
